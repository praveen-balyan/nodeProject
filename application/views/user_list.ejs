<%- include('templates/head',{page_title: page_title}) -%>
<div id="warpper">
    <%- include('templates/sidebar') -%>
    <div id="wrap">
        
        <div class="page-header-warp">
            <div class="page-title">
                <h3>Users</h3>
            </div>
            <div id="header-right-btn">          
                <a class="btn btn-primary" href="/add-user"><i class="fa fa-plus" aria-hidden="true"></i> Add New User</a>
            </div>            
        </div>
          
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="row">                   
                    <div class="col-lg-12">
                        <% if((locals.statusCode) && (statusCode=='00' || statusCode=='01')) { %>
                            <div class="form-group <%= ((statusCode=='00')?'alert alert-success':'alert alert-danger') %>">
                                <%= message %>
                            </div>
                        <% } %>
                        <div class="panel panel-custom">
                            <div class="panel-heading">
                                <h5 class="panel-title">List all Users</h5>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>       
                                            <th>First name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>DOB</th>
                                            <th>Created on</th>
                                            <th>Status</th>
                                            <th>Action </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(data) { %>
                                            <% data.forEach(function(user){ %>
                                                <tr>
                                                    <td><%= user.firstName %></td>
                                                    <td><%= user.lastName %></td>
                                                    <td><%= user.email %></td>
                                                    <td><%= ((user.DOB)?user.DOB.toDateString():'') %></td>
                                                    <td><%= ((user.createdDate)?user.createdDate.toISOString().replace(/T/, ' ').replace(/\..+/, ''):'') %></td>
                                                    <td><%= user.status %></td>
                                                    <td><div class="btn-group btn-group-sm" role="group" aria-label="..."> 
                                                    <a href="/update-user/<%= user._id %>" class="btn btn-default" title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> 
                                                    <a href="/deleteUser/<%= user._id %>" class="btn btn-default" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                    </div></td>
                                                </tr>
                                            <% }); %>
                                        
                                        <% }else{ %>
                                            <tr>
                                                <td colspan="8">NO record found..!!</td>
                                            </tr>
                                        <% } %>                                        
                                    </tbody>
                                </table>
                                <div class="panel-footer clearfix">
                                    <nav aria-label="...">
                                        <ul class="pagination">
                                            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                            <li><a href="#">4</a></li>
                                            <li><a href="#">5</a></li>
                                            <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('templates/footer') -%>
